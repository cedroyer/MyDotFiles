[include]
	path = .gitconfig_local
[color]
	ui = auto
[alias]
	co = checkout
	st = status
	s = status --short
	l = log --oneline --decorate --graph
	cob = checkout -b
	ff = merge --ff-only
	noff = merge --no-ff
    cl = clone --recursive -b dev
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[core]
	excludesFile = /home/cedric/.config/git/ignore
